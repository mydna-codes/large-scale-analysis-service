        </dependency>

        <dependency>
            <groupId>codes.mydna</groupId>
            <artifactId>rest-lib</artifactId>
        </dependency>
        <dependency>
            <groupId>codes.mydna</groupId>
            <artifactId>auth-common</artifactId>
        </dependency>
        <dependency>
            <groupId>codes.mydna</groupId>
            <artifactId>sequence-bank-lib-v1</artifactId>
        </dependency>
        <dependency>
