        </dependency>
        <dependency>
            <groupId>codes.mydna</groupId>
            <artifactId>large-scale-analysis-lib</artifactId>
        </dependency>
    </dependencies>


    <build>
        <finalName>large-scale-analysis</finalName>
        <plugins>
            <plugin>
                <groupId>com.kumuluz.ee</groupId>
                <artifactId>kumuluzee-maven-plugin</artifactId>
                <version>${kumuluzee.version}</version>
                <executions>
                    <execution>
                        <id>package</id>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>